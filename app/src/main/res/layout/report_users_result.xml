<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_25sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_person"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_report_users_from"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15ssp"
                android:background="@drawable/profile_bg"
                android:src="@drawable/ic_profile"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="@dimen/_15ssp"
                />

            <TextView
                android:id="@+id/username_tv_report_users_from"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_70sdp"
                android:text="@string/username"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/career_tv_report_users_from"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_70sdp"
                android:text="@string/career"
                android:textStyle="bold"
                android:layout_below="@id/username_tv_report_users_from"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_80sdp"
                android:textSize="@dimen/_17ssp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                />


            <ImageButton
                android:id="@+id/see_details_btn_report_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eye"
                android:backgroundTint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:contentDescription="@string/image_career" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>