<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_25sdp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_person"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_report_profile_from"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15ssp"
                android:background="@drawable/profile_bg"
                android:src="@drawable/ic_profile"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="@dimen/_15ssp"
                />

            <TextView
                android:id="@+id/username_tv_report_worker_from"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_70sdp"
                android:text="@string/username"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/career_tv_report_worker_from"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_70sdp"
                android:text="@string/career"
                android:textStyle="bold"
                android:layout_below="@id/username_tv_report_worker_from"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="@dimen/_17ssp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15ssp"
                />


            <ImageButton
                android:id="@+id/view_data_worker_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_below="@id/career_tv_report_worker_from"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/ic_eye"
                android:contentDescription="@string/image_career" />

            <ImageButton
                android:id="@+id/accept_worker_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_below="@id/career_tv_report_worker_from"
                android:layout_marginStart="@dimen/_15ssp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_accept_mark"
                android:contentDescription="@string/image_career" />

            <ImageButton
                android:id="@+id/remover_worker_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_below="@id/career_tv_report_worker_from"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_remove"
                android:contentDescription="@string/image_career" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>