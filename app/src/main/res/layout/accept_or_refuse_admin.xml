<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_person"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_worker_profile"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/profile_bg"
                android:src="@drawable/ic_profile"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/username_tv_check_account"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_80sdp"
                android:text="@string/username"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/career_tv_check_account"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_80sdp"
                android:text="@string/career"
                android:textStyle="bold"
                android:layout_below="@id/username_tv_check_account"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_25sdp"
                android:textSize="@dimen/_17ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <LinearLayout
                android:layout_below="@id/career_tv_check_account"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/accepted_image_view"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_double_check_seen_accept"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:contentDescription="@string/image_career" />

                <TextView
                    android:id="@+id/accepted_tv"
                    android:text="@string/accepted"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17ssp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>



            <ImageButton
                android:id="@+id/view_data_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_below="@id/career_tv_check_account"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_eye"
                android:contentDescription="@string/image_career" />

            <ImageButton
                android:id="@+id/accept_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/career_tv_check_account"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_accept_mark"
                android:contentDescription="@string/image_career" />

            <ImageButton
                android:id="@+id/remover_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_below="@id/career_tv_check_account"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_remove"
                android:contentDescription="@string/image_career" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>