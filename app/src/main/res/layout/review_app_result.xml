<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_review_app"
        android:layout_width="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/profile_bg"
        android:src="@drawable/ic_profile"
        android:backgroundTint="@color/colorPrimary"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_25sdp"
        android:id="@+id/card_view_opinion_other"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_person"
            >

            <TextView
                android:id="@+id/tv__username_review_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textSize="@dimen/_17ssp"
                android:text="@string/username"
                />

            <TextView
                android:id="@+id/tv_career_review_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_below="@id/tv__username_review_app"
                android:layout_marginStart="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textSize="@dimen/_17ssp"
                android:text="@string/career"
                />


            <TextView
                android:id="@+id/tv_review_app"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_career_review_app"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:textAlignment="textStart"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/_17ssp"
                />


            <RatingBar
                android:id="@+id/rating_review_app"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_review_app"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:clickable="false"
                android:layout_marginBottom="@dimen/_10sdp"
                android:numStars="5"
                android:stepSize="0.5"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>