<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DeleteOpinionActivity">

    <RelativeLayout
        android:id="@+id/relative_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >


        <ImageButton
            android:id="@+id/arrow_btn_delete_opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_search"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:contentDescription="@string/image_post" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_delete_opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_marginStart="@dimen/_50sdp"
            />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:text="@string/delete"
            android:background="@drawable/post_bg"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_opinion_me_delete"
        android:layout_width="wrap_content"
        android:layout_below="@id/relative_view"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="@dimen/_17ssp"
        />


    <RatingBar
        android:id="@+id/rating_opinion_view_me_delete"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_opinion_me_delete"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:clickable="false"
        android:numStars="5"
        android:stepSize="0.5" />

</RelativeLayout>